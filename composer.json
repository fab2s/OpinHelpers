{
    "name" : "fab2s/opinhelpers",
    "description" : "A collection of Simple, opinionated yet hopefully useful PHP Helper Libs",
    "type" : "library",
    "authors" : [{
        "name" : "Fabrice de Stefanis"
    }],
    "keywords" : [
        "PHP",
        "Simple",
        "Helpers",
        "Utf8",
        "String",
        "Math",
        "BOM",
        "BcMath",
        "FileLock"
    ],
    "license" : [
        "MIT"
    ],
    "require" : {
        "php": "^7.1|^8.0",
        "fab2s/math": "^1.0|^2.0",
        "fab2s/filelock": "^1.0",
        "fab2s/strings": "^1.0"
    },
    "require-dev": {
      "phpunit/phpunit": "~7.0|~8.0"
    },
    "autoload-dev": {
        "psr-4": {
            "fab2s\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-update-cmd": [
            "rm -f .*.cache"
        ],
        "post-install-cmd": [
            "rm -f .*.cache"
        ]
    }
}
